<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".CatfeinaApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Catfeina">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Catfeina">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ====================================================================== -->
        <!--      INÍCIO DA CORREÇÃO: Configuração do AndroidX Startup Provider       -->
        <!-- ====================================================================== -->
        <!-- Este provider é o ponto de entrada para a biblioteca AndroidX Startup. -->
        <!-- Ele descobre e executa todos os Initializers declarados.               -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">

            <!-- 1. DECLARA O SEU INICIALIZADOR: -->
            <!-- Diz ao sistema para usar a sua classe RiveInitializer. -->
            <meta-data
                android:name="com.marin.catfeina.core.di.RiveInitializer"
                android:value="androidx.startup" />

            <!-- 2. REMOVE O INICIALIZADOR PADRÃO DA BIBLIOTECA RIVE: -->
            <!-- Isso previne a inicialização duplicada e remove o warning. -->
            <!-- 'tools:node="remove"' instrui o merger do Manifest a remover -->
            <!-- qualquer declaração que corresponda a este nome de pacote.   -->
            <meta-data
                android:name="app.rive.runtime.kotlin.RiveInitializer"
                tools:node="remove" />

        </provider>
        <!-- ====================================================================== -->
        <!--                          FIM DA CORREÇÃO                               -->
        <!-- ====================================================================== -->

    </application>

</manifest>