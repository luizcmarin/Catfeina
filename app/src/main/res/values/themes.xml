<resources>

    <style name="Theme.Catfeina" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- NOVO: Tema do Splash Screen -->
    <style name="Theme.Catfeina.Splash" parent="Theme.SplashScreen">
        <!-- Cor de fundo do splash screen -->
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>

        <!-- Ícone que aparecerá no centro (use seu ícone de launcher) -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>

        <!-- Tema para o qual o app irá transicionar após o splash -->
        <item name="postSplashScreenTheme">@style/Theme.Catfeina</item>
    </style>
</resources>